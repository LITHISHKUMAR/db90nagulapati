extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let vanid = toShow._id 
    - let name = toShow.name 
    - let brand = toShow.brand 
    - let price = toShow.price 
    - let actionid = "/resource/van/" + vanid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='vanAttr mr-3') Van ID is: 
        div #{vanid} 
      div.row 
        div(class='vanAttr mr-3') Van Name is: 
        div #{name} 
      div.row 
        div(class='vanAttr mr-3') Van Brand is: 
        div #{brand} 
      div.row 
        div(class='vanAttr mr-3') Van Price is: 
        div #{price} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the van collection 
      window.location.href='/van' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/van' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 